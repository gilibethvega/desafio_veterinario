<h1>Mascotas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Raza</th>
      <th>Fecha de cumpleaños</th>
      <th>N° Visitas</th>
      <th>Dueño</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.date_birthday %></td>
        <td><%= pet.number_visits %></td>
        <td><%= pet.client_name %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

