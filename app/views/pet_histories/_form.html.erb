<%= form_with(model: [@pet, pet_history], local: true) do |form| %>
  <% if pet_history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pet_history.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
      <% pet_history.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :pet %>
    <%= form.select :pet_id, @pets.map{ |pet| [pet.name, pet.id]}, prompt: "Seleccione una opción"  %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.text_field :weight %>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.text_field :height %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, PetHistory.statuses.keys, prompt: "Seleccione una opción"  %>
  </div>

  <div class="field">
    <%= form.label :diagnosis %>
    <%= form.text_field :diagnosis %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
